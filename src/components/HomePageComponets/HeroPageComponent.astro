---
const { lang } = Astro.props;
const title = lang === 'en' 
  ? 'Capturing Your Special Moments' 
  : 'Capturând Momentele Tale Speciale';
const subtitle = lang === 'en' 
  ? 'Professional Photography for Weddings, Events & More' 
  : 'Fotografie Profesională pentru Nunți, Evenimente & Mai Mult';
---

<!-- Hero persistent -->
<section class="hero" transition:persist="hero">
  <!-- Placeholder background -->
  <div class="hero-placeholder"></div>

  <!-- Imagine locală, preload + eager pentru încărcare instant -->
  <img 
    src="/src/assets/images/heroComponent/pexels.jpg" 
    alt="Hero Background" 
    class="hero-image" 
    loading="eager" 
    fetchpriority="high" 
    id="heroImage"
  />

  <div class="hero-overlay"></div>

  <div class="hero-content">
    <h1>{title}</h1>
    <p>{subtitle}</p>
  </div>
</section>

<style>
.hero {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: #1a1515;
}

.hero-placeholder {
  position: absolute;
  inset: 0;
  z-index: 0;
  background: linear-gradient(135deg, #1a1515 0%, #2d2424 50%, #1a1515 100%);
  background-size: 400% 400%;
  animation: gradient-shift 3s ease infinite;
  opacity: 1;
  transition: opacity 0.6s ease-out;
}

.hero-placeholder.hidden {
  opacity: 0;
  pointer-events: none;
}

@keyframes gradient-shift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

.hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  z-index: 1;
  opacity: 0;
  transition: opacity 0.8s ease-out;
}

.hero-image.loaded {
  opacity: 1;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
}

.hero-content {
  position: relative;
  z-index: 3;
  text-align: center;
  color: white;
  max-width: 800px;
  padding: 2rem;
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.8s ease-out 0.3s, transform 0.8s ease-out 0.3s;
}

.hero-content.show {
  opacity: 1;
  transform: translateY(0);
}

h1 {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: bold;
  margin-bottom: 1rem;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

p {
  font-size: clamp(1.1rem, 2vw, 1.5rem);
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
}

/* Prefers reduced motion */
@media (prefers-reduced-motion: reduce) {
  .hero-placeholder {
    animation: none;
  }
  
  .hero-image,
  .hero-content {
    transition: none;
    opacity: 1;
    transform: none;
  }
}
</style>

<script>
  function initHero() {
    const heroImage = document.getElementById('heroImage') as HTMLImageElement;
    const placeholder = document.querySelector('.hero-placeholder') as HTMLElement;
    const content = document.querySelector('.hero-content') as HTMLElement;

    if (heroImage && placeholder && content) {
      // Check if image is already loaded
      if (heroImage.complete) {
        heroImage.classList.add('loaded');
        placeholder.classList.add('hidden');
        content.classList.add('show');
      } else {
        // Wait for image to load
        heroImage.addEventListener('load', () => {
          heroImage.classList.add('loaded');
          setTimeout(() => {
            placeholder.classList.add('hidden');
          }, 200);
          setTimeout(() => {
            content.classList.add('show');
          }, 400);
        });
      }
    }
  }

  // Initialize on page load
  initHero();

  // Reinitialize after view transitions
  document.addEventListener('astro:page-load', () => {
    initHero();
  });
</script>