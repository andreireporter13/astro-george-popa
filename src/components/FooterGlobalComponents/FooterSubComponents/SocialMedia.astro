---
const { facebookLabel, instagramLabel, facebookImages, instagramImages } = Astro.props;

const facebookLink = "https://www.facebook.com/georgepopa.photographer";
const instagramLink = "https://www.instagram.com/georgepopa.photographer";
---

<div class="social-media">
    <div class="social-block">
        <h3>
            <a href={facebookLink} target="_blank" rel="noopener noreferrer">
                {facebookLabel}
            </a>
        </h3>
        <div class="social-gallery">
            {facebookImages.map((img: any, i: any) => (
                <img src={img} alt={`Facebook image ${i}`} loading="lazy" />
            ))}
        </div>
    </div>

    <div class="social-block">
        <h3>
            <a href={instagramLink} target="_blank" rel="noopener noreferrer">
                {instagramLabel}
            </a>
        </h3>
        <div class="social-gallery">
            {instagramImages.map((img: any, i:any) => (
                <img src={img} alt={`Instagram image ${i}`} loading="lazy" />
            ))}
        </div>
    </div>
</div>

<style>
.social-media {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.social-block h3 {
    margin-bottom: 1rem;
    font-size: 1.3rem;
    font-weight: 600;
}

.social-block h3 a {
    color: #ffffff;
    text-decoration: none;
    cursor: pointer;
}

.social-block h3 a:hover {
    color: #c4a574;
}

.social-gallery {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 5px;
}

.social-gallery img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 10px;
    display: block;
    transition: transform 0.3s;
}

.social-gallery img:hover {
    transform: scale(1.05);
}
</style>
