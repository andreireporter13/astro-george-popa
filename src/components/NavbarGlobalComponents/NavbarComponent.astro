---
import { navItemsRO, navItemsEN } from '../../composables/NavbarComposables/navItems.js';

// global functions
import { initScrollClass } from '../../composables/GlobalComposables/scrollHandler.js';
import { initHamburgerMenu } from '../../composables/GlobalComposables/hamburgerHandler.js';

const { lang, currentPath } = Astro.props;

// Automatically choose the correct navItems based on the language
const navItems = lang === 'en' ? navItemsEN : navItemsRO;

// Function to check if any menu item is active
function isAnyItemActive() {
  // Check main menu items
  if (Object.values(navItems).some(item => item.href === currentPath)) {
    return true;
  }
  
  // Check dropdown items
  if (navItems.wedding?.items?.some(item => item.href === currentPath)) {
    return true;
  }
  
  if (navItems.sessions?.items?.some(item => item.href === currentPath)) {
    return true;
  }
  
  return false;
}

const shouldHighlightHome = !isAnyItemActive();
---

