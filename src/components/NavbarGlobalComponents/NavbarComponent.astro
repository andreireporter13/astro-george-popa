    <!-- LOGO AND NAME SLOT - STANGA -->
    <div class="navbar-component__logo">
      <slot name="logo-and-name" />
    </div>

    <!-- MAIN NAV - MIJLOC (DESKTOP) -->
    <div class="navbar-component__menu-desktop">
      <ul class="navbar-component__list">
        <!-- HOME -->
        <li class="navbar-component__item">
          <a 
            href={navItems.home.href}
            class={`navbar-component__link ${(currentPath === navItems.home.href || shouldHighlightHome) ? 'navbar-component__link--active' : ''}`}
