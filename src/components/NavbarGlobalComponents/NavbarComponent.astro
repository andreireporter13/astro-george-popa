<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

  .navbar-component {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: transparent;
    padding: 1.3rem 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .navbar-component.scrolled {
    padding: 0.85rem 0;
    background: rgba(255, 255, 255, 0.97);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .navbar-component__container {
    max-width: 1750px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 5rem;
    padding: 0 2rem;
  }

  /* LOGO - STANGA */
  .navbar-component__logo {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    z-index: 1001;
  }

  /* DESKTOP MENU */
  .navbar-component__menu-desktop {
    display: flex;
    flex: 1;
    justify-content: center;
  }

  .navbar-component__list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-shrink: 0;
  }

  .navbar-component__item {
    margin: 0;
    position: relative;
  }

  .navbar-component__item--dropdown::before {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    height: 10px;
    background: transparent;
    pointer-events: auto;
  }

  .navbar-component__link {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.95);
    font-weight: 500;
    font-size: 0.95rem;
    letter-spacing: 0.3px;
    padding: 0.7rem 1.2rem;
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    display: inline-block;
    cursor: pointer;
    overflow: hidden;
  }

  .link-text {
    position: relative;
    z-index: 1;
  }

  .link-underline {
    position: absolute;
    bottom: 0.5rem;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 60%;
    height: 2px;
    background: #dc2626;
    border-radius: 2px;
    transition: transform 0.3s ease;
  }

  .navbar-component__link:hover .link-underline {
    transform: translateX(-50%) scaleX(1);
  }

  .scrolled .navbar-component__link {
    color: #555555;
  }

  .navbar-component__link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .scrolled .navbar-component__link:hover {
    color: #1a1a1a;
    background: rgba(220, 38, 38, 0.08);
  }

  .navbar-component__link--active {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.2);
    font-weight: 600;
  }

  .scrolled .navbar-component__link--active {
    color: #dc2626;
    background: rgba(220, 38, 38, 0.12);
  }

  .navbar-component__link--parent {
    display: flex;
    align-items: center;
    gap: 0.45rem;
  }

  .navbar-component__link--parent::after {
    content: '';
    display: inline-block;
    margin-left: 0.25rem;
    vertical-align: 0.12em;
    border-top: 0.4em solid;
    border-right: 0.35em solid transparent;
    border-bottom: 0;
    border-left: 0.35em solid transparent;
    transition: transform 0.3s ease;
  }

  .navbar-component__item--dropdown:hover .navbar-component__link--parent::after {
    transform: rotate(180deg);
  }

  /* DROPDOWN STYLES */
  .navbar-component__dropdown {
    position: absolute;
    top: calc(100% + 10px);
    left: 0;
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.12);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 14px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    list-style: none;
    margin: 0;
    padding: 0.6rem;
    min-width: 220px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 200;
    pointer-events: none;
  }

  .scrolled .navbar-component__dropdown {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .navbar-component__item--dropdown:hover .navbar-component__dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: all;
  }

  .navbar-component__dropdown li {
    margin: 0;
  }

  .navbar-component__dropdown-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.85rem 1.1rem;
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
    font-size: 0.92rem;
    border-radius: 10px;
    position: relative;
  }

  .scrolled .navbar-component__dropdown-link {
    color: #444444;
  }

  .dropdown-icon {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .dropdown-arrow {
    margin-left: auto;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
    color: #dc2626;
  }

  .navbar-component__dropdown-link:hover {
    background: rgba(255, 255, 255, 0.25);
    color: #ffffff;
    transform: translateX(6px);
  }

  .navbar-component__dropdown-link:hover .dropdown-icon {
    transform: scale(1.15);
  }

  .navbar-component__dropdown-link:hover .dropdown-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .scrolled .navbar-component__dropdown-link:hover {
    background: rgba(220, 38, 38, 0.08);
    color: #dc2626;
  }

  .navbar-component__dropdown-link--active {
    background: rgba(255, 255, 255, 0.3);
    color: #ffffff;
    font-weight: 600;
  }

  .scrolled .navbar-component__dropdown-link--active {
    background: rgba(220, 38, 38, 0.12);
    color: #dc2626;
  }

  /* ACTIONS - DREAPTA */
  .navbar-component__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .navbar-component__contact {
    display: flex;
    align-items: center;
  }

  /* MOBILE CONTROLS */
  .navbar-component__mobile-controls {
    display: none;
  }

  .navbar-component__language-mobile {
    display: none;
  }

  /* HAMBURGER BUTTON */
  .navbar-component__hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 28px;
    height: 22px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
    transition: transform 0.3s ease;
  }

  .navbar-component__hamburger:hover {
    transform: scale(1.1);
  }

  .hamburger-line {
    width: 100%;
    height: 3px;
    background: #ffffff;
    border-radius: 3px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .scrolled .hamburger-line {
    background: #1a1515;
  }

  .navbar-component__hamburger.active .hamburger-line {
    background: #1a1515;
  }

  .navbar-component__hamburger.active .hamburger-line:nth-child(1) {
    transform: translateY(9.5px) rotate(45deg);
  }

  .navbar-component__hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .navbar-component__hamburger.active .hamburger-line:nth-child(3) {
    transform: translateY(-9.5px) rotate(-45deg);
  }

  /* MOBILE MENU - FULL SCREEN */
  .navbar-component__mobile-menu {
    display: none;
  }

  /* RESPONSIVE */
  @media (max-width: 1300px) {
    .navbar-component__container {
      gap: 2rem;
    }

    .navbar-component__list {
      gap: 0.25rem;
    }

    .navbar-component__link {
      padding: 0.6rem 1rem;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 1200px) {
    .navbar-component {
      padding: 1rem 0;
    }

    .navbar-component.scrolled {
      padding: 0.85rem 0;
    }

    .navbar-component__container {
      gap: 1.5rem;
      padding: 0 1.5rem;
    }

    .navbar-component__link {
      padding: 0.55rem 0.85rem;
      font-size: 0.88rem;
    }
  }

  @media (max-width: 1150px) {
    .navbar-component {
      background: transparent;
    }

    .navbar-component.scrolled,
    .navbar-component.menu-active {
      background: rgba(255, 255, 255, 0.97);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
    }

    .navbar-component__container {
      padding: 0 1.25rem;
    }

    /* Hide desktop menu and actions */
    .navbar-component__menu-desktop,
    .navbar-component__actions {
      display: none;
    }

    /* Show mobile controls container */
    .navbar-component__mobile-controls {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      z-index: 1001;
    }

    .navbar-component__language-mobile {
      display: block;
    }

    /* Show hamburger */
    .navbar-component__hamburger {
      display: flex;
    }

    /* Mobile Menu Styles - FULL SCREEN */
    .navbar-component__mobile-menu {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
      opacity: 0;
      visibility: hidden;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      z-index: 1000;
      overflow-y: auto;
      overflow-x: hidden;
      padding: 0 1rem;
      box-sizing: border-box;
    }

    .navbar-component__mobile-menu.active {
      opacity: 1;
      visibility: visible;
    }

    .mobile-menu__content {
      padding: 6.5rem 0 3rem;
      max-width: 100%;
      width: 100%;
      margin: 0 auto;
      animation: slideInFromTop 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      box-sizing: border-box;
    }

    @keyframes slideInFromTop {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .navbar-component__mobile-menu.active .mobile-menu__content {
      animation: slideInFromTop 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .mobile-menu__list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 0.85rem;
      width: 100%;
      box-sizing: border-box;
    }

    .mobile-menu__item {
      margin: 0;
      animation: fadeInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
      opacity: 0;
      width: 100%;
      box-sizing: border-box;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .navbar-component__mobile-menu.active .mobile-menu__item:nth-child(1) { animation-delay: 0.1s; }
    .navbar-component__mobile-menu.active .mobile-menu__item:nth-child(2) { animation-delay: 0.15s; }
    .navbar-component__mobile-menu.active .mobile-menu__item:nth-child(3) { animation-delay: 0.2s; }
    .navbar-component__mobile-menu.active .mobile-menu__item:nth-child(4) { animation-delay: 0.25s; }
    .navbar-component__mobile-menu.active .mobile-menu__item:nth-child(5) { animation-delay: 0.3s; }
    .navbar-component__mobile-menu.active .mobile-menu__item:nth-child(6) { animation-delay: 0.35s; }

    .mobile-menu__link {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.15rem 1.25rem;
      background: white;
      border: none;
      width: 100%;
      text-align: left;
      text-decoration: none;
      color: #2a2a2a;
      font-weight: 500;
      font-size: 1rem;
      border-radius: 14px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      font-family: 'Inter', sans-serif;
      box-sizing: border-box;
      overflow: hidden;
      margin: 0;
    }

    .mobile-menu__link:hover,
    .mobile-menu__link:active {
      background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
      box-shadow: 0 4px 16px rgba(220, 38, 38, 0.12);
      transform: translateY(-1px);
      color: #dc2626;
    }

    .mobile-menu__link--active {
      background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
      color: white;
      box-shadow: 0 4px 20px rgba(220, 38, 38, 0.3);
    }

    .mobile-menu__link--active .mobile-link__icon {
      transform: scale(1.15);
    }

