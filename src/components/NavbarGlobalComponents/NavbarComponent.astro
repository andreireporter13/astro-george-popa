              <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <ul class="mobile-menu__submenu" id="submenu-sessions">
            {navItems.sessions.items.map((item, index) => {
              const icons = ['ü§∞', 'üë∂', 'üéà'];
              return (
                <li>
                  <a 
                    href={item.href}
                    class={`mobile-submenu__link ${currentPath === item.href ? 'mobile-submenu__link--active' : ''}`}
                  >
                    <span class="mobile-link__icon">{icons[index]}</span>
