const { currentPath, lang } = Astro.props;

function getTranslatedPath(path: any, targetLang: any) {
  const pathWithoutLang = path.replace(/^\/(ro|en)/, '');
  return `/${targetLang}${pathWithoutLang || '/'}`;
}

